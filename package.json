{
  "name": "smartquote-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "node dist/src/server.js",
    "build": "tsc",
    "build:worker": "tsc src/workers/emailMonitorWorker.ts --outDir dist/workers --target es2020 --module commonjs --esModuleInterop --skipLibCheck --resolveJsonModule",
    "build:prod": "npm run build && npm run build:worker",
    "start:prod": "NODE_ENV=production node dist/src/server.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "python-api": "powershell -ExecutionPolicy Bypass -File ./scripts/start-python-api.ps1",
    "python-api:dev": "powershell -ExecutionPolicy Bypass -File ./scripts/start-python-api.ps1 5001 127.0.0.1 true",
    "python-api:docker": "docker-compose -f scripts/busca_local/docker-compose.yml up --build",
    "python-api:docker:dev": "docker-compose -f scripts/busca_local/docker-compose.yml --profile local up --build",
    "test-python-api": "ts-node scripts/test-python-api.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartquote-rcs/smartquote-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/smartquote-rcs/smartquote-backend/issues"
  },
  "homepage": "https://github.com/smartquote-rcs/smartquote-backend#readme",
  "description": "",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@mendable/firecrawl-js": "^3.3.0",
    "@supabase/supabase-js": "^2.53.0",
    "@types/jest": "^30.0.0",
    "@types/pdfkit": "^0.17.2",
    "@types/uuid": "^10.0.0",
    "@types/xlsx": "^0.0.35",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "google-auth-library": "^10.2.1",
    "googleapis": "^156.0.0",
    "groq-sdk": "^0.30.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "pdfkit": "^0.17.1",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5",
    "zod": "^4.0.14"
  },
  "devDependencies": {
