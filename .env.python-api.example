# Exemplo de configuração para API Python
# Copie este arquivo para .env na raiz do projeto

# =============================================================================
# CONFIGURAÇÕES DA API PYTHON
# =============================================================================

# Endereço e porta da API Python
PYTHON_API_URL=http://127.0.0.1:5001
PYTHON_API_HOST=127.0.0.1
PYTHON_API_PORT=5001
PYTHON_API_DEBUG=false
PYTHON_API_TIMEOUT=120000

# Configurações de processamento
PYTHON_DEFAULT_LIMIT=10
PYTHON_USE_MULTILINGUAL=true
PYTHON_CREATE_QUOTATION=false

# Pool de workers (não usado na versão API)
PY_POOL_MIN=1
PY_POOL_MAX=1
PY_TASK_TIMEOUT_MS=120000
PY_IDLE_TTL_MS=300000

# =============================================================================
# WEAVIATE
# =============================================================================

WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# =============================================================================
# SUPABASE
# =============================================================================

SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# GROQ (LLM)
# =============================================================================

GROQ_API_KEY=your_groq_api_key

# =============================================================================
# CONFIGURAÇÕES GERAIS
# =============================================================================

# Ambiente (development, production)
NODE_ENV=development

# Configurações de log
LOG_LEVEL=info
PYTHON_LOG_LEVEL=INFO
